<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/id_item_player_in_team_image"
        android:layout_width="80dp"
        android:background="@drawable/avatarka"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_item_player_in_team_name"
            android:layout_width="223dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="фил Фоден"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id_item_player_in_team_position"
            android:layout_width="223dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="полузащитник"
            android:textColor="@color/black"
            android:textSize="25dp" />

    </LinearLayout>

    <TextView
        android:layout_width="70dp"
        android:id="@+id/id_item_player_in_team_number"
        android:textColor="@color/black"
        android:text="10"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_height="70dp"/>

</LinearLayout>